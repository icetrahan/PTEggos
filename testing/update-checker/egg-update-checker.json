        {
            "name": "API Key",
            "description": "API key for authenticating with the backend",
            "env_variable": "API_KEY",
            "default_value": "update-checker-key",
            "user_viewable": true,
            "user_editable": true,
            "rules": "required|string",
            "field_type": "text"
        },
        {
            "name": "Steam App ID",
            "description": "The Isle Steam App ID",
            "env_variable": "SRCDS_APPID",
            "default_value": "1020410",
            "user_viewable": true,
            "user_editable": false,
            "rules": "required|string",
            "field_type": "text"
        },
        {
            "name": "Norden API URL",
            "description": "Norden Cloud API endpoint for modded binary",
            "env_variable": "NORDEN_API_URL",
